<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#fafafa"
        app:layout_constraintBottom_toTopOf="@id/guideline10"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/guideline11"
        app:layout_constraintRight_toRightOf="@id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/guideline9"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/alike"
                android:text="Kişi Sayısı"
                android:textColor="#BF0505"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/instantNumberOfPersonSpinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/instantTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Saat"
                android:textColor="#BF0505"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instantTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:hint="Saati seçiniz"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/instantTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Davet Başlığı"
                android:textColor="#BF0505"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/instantTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                android:width="322dp"
                android:hint="Örnek:Kahve,Sinema..."
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/instantExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Açıklama"
                android:textColor="#BF0505"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/instantExplanationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                android:width="322dp"
                android:ems="10"
                android:inputType="textMultiLine|textPersonName"
                android:textSize="14sp"
                android:maxLength="150"/>

            <TextView
                android:id="@+id/instantLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alike"
                android:text="Konum"
                android:textColor="#BF0505"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/instantLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Konum Seçiniz"
                android:inputType="textMultiLine|textPersonName"
                android:textColor="#000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/sendInstantInvite"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/my_button"
                android:backgroundTint="#BF0505"
                android:text="Davet Aç"
                android:textColor="#FAFAFA" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>