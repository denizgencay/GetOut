<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:backgroundTint="#fafafa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Davet Türü"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Başlık"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Zaman"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/others_profile_invite_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@id/rightStart"
            app:layout_constraintEnd_toEndOf="@id/rightEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_title" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Konum"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/timeText" />

        <TextView
            android:id="@+id/others_profile_invite_item_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@id/rightStart"
            app:layout_constraintEnd_toEndOf="@id/rightEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_time" />

        <TextView
            android:id="@+id/others_profile_invite_item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@id/rightStart"
            app:layout_constraintEnd_toEndOf="@id/rightEnd"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/others_profile_invite_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@id/rightStart"
            app:layout_constraintEnd_toEndOf="@id/rightEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_type" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Adres"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/others_profile_invite_item_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:textAlignment="textStart"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@id/rightStart"
            app:layout_constraintEnd_toEndOf="@id/rightEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_location" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Açıklama"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_address" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Açıklama"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_address" />

        <TextView
            android:id="@+id/others_profile_invite_item_explanation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:paddingEnd="50dp"
            android:textAlignment="textStart"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@id/rightStart"
            app:layout_constraintEnd_toEndOf="@id/rightEnd"
            app:layout_constraintTop_toBottomOf="@+id/others_profile_invite_item_address" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Katılımcılar"
            android:textColor="@color/getoutred"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/leftStart"
            app:layout_constraintEnd_toEndOf="@id/leftEnd"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <ImageView
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_woman"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/others_profile_invite_item_explanation"
            app:layout_constraintStart_toStartOf="@id/rightStart" />

        <TextView
            android:id="@+id/others_profile_item_woman_text"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/getoutred"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/others_profile_invite_item_explanation"
            app:layout_constraintLeft_toRightOf="@id/woman"/>

        <ImageView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_man"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/others_profile_invite_item_explanation"
            app:layout_constraintLeft_toRightOf="@id/others_profile_item_woman_text" />

        <TextView
            android:id="@+id/others_profile_item_man_text"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/getoutred"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/others_profile_invite_item_explanation"
            app:layout_constraintLeft_toRightOf="@id/man"/>






        <Button
            android:id="@+id/others_profile_invite_item_send_request_button"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_button"
            android:textAllCaps="false"
            android:text="Davete Katıl"
            android:textColor="#fafafa"
            app:layout_constraintEnd_toEndOf="@id/buttonEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/buttonStart"
            app:layout_constraintTop_toBottomOf="@id/woman"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/others_profile_attendant_button"
            android:layout_width="0dp"
            android:layout_height="33dp"
            app:layout_constraintStart_toStartOf="@id/buttonStart"
            app:layout_constraintEnd_toEndOf="@id/buttonEnd"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toBottomOf="@id/woman"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            android:text="Bu davete katıldınız"
            android:textColor="#BF0505"
            android:textStyle="bold"
            android:background="@drawable/attendant_button_border"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>