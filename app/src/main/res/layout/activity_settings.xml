<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.imc.getout.SettingsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.035" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="244dp"
        android:layout_height="226dp"
        android:layout_marginTop="60dp"
        android:background="#F5F5F5"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toRightOf="@id/guideline11"
        app:layout_constraintRight_toLeftOf="@id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/guideline9"
        app:srcCompat="@drawable/ahmet" />

    <TextView
        android:id="@+id/settings_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hakkımızda"
        android:textColor="@color/getoutred"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/guideline11"
        app:layout_constraintRight_toLeftOf="@id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <TextView
        android:id="@+id/settings_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Premium"
        android:textColor="@color/getoutred"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/guideline11"
        app:layout_constraintRight_toLeftOf="@id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/settings_about_us" />

    <TextView
        android:id="@+id/settings_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Parola Değiştir"
        android:textColor="@color/getoutred"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/guideline11"
        app:layout_constraintRight_toLeftOf="@id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/settings_premium" />

    <TextView
        android:id="@+id/settings_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="onSignOutClicked"
        android:text="Çıkış Yap"
        android:textColor="@color/getoutred"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/guideline11"
        app:layout_constraintRight_toLeftOf="@id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/settings_change_password" />


</androidx.constraintlayout.widget.ConstraintLayout>
